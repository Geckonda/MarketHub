@model LoginViewModel

@{
	ViewData["title"] = "Авторизация";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Account/auth.css" asp-append-version="true" />
}

<div class="login-box">
    <h2>Авторизация</h2>
    <form autocomplete="on" method="post" asp-controller="Account" asp-action="Login">
        <div class="user-box">
            <input asp-for="Email" type="email" name="Email" required autocomplete="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
            <label asp-for="Email">Email</label>
        </div>
        <div class="user-box">
            <input asp-for="Password" type="password" name="Password" required>
            <span asp-validation-for="Password" class="text-danger"></span>
            <label asp-for="Password">Пароль</label>
        </div>
        @if (ViewBag.Error != null)
        {
            <div class="w-100 d-flex justify-content-center mb-3">
                <span class="text-danger">@ViewBag.Error</span>
            </div>
        }
        <div class="w-100 d-flex justify-content-center">
            <button type="submit">Войти</button>
        </div>
    </form>
</div>
