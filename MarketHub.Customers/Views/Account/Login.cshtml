@model LoginViewModel

@{
	ViewData["title"] = "Авторизация";
}

<div style="padding: 10px;"></div>
<div class="col-md-12 d-flex justify-content-center">
    <div class="card-body">
        <div class="card card-outline-secondary">
            <div class="card-body body-frame">
                <h3 class="mb-3 text-center ParagraphHome">Авторизация</h3>
                <form autocomplete="on" method="post" asp-controller="Account" asp-action="Login">

                    <div class="row mb-3">
                        <label asp-for="Email" class="col-md-4 col-form-label text-md-end"></label>
                        <div class="col-md-6">
                            <input asp-for="Email" type="email" class="form-control" name="Email" required autocomplete="Email" autofocus>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="Password" class="col-md-4 col-form-label text-md-end">Пароль</label>
                        <div class="col-md-6">
                            <input asp-for="Password" type="password" class="form-control" name="Password" required>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    @if (ViewBag.Error != null)
                    {
                        <div class="w-100 d-flex justify-content-center mb-3">
                            <span class="text-danger">@ViewBag.Error</span>
                        </div>
                    }
                    <div class="w-100 d-flex justify-content-center">
                        <button class="btn btn-success" type="submit">Войти</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>