@model RegisterViewModel

@{
    ViewData["title"] = "Регистрация";
}


@section Styles {
    <link rel="stylesheet" href="~/css/Account/auth.css" asp-append-version="true" />
}

<div class="login-box">
    <h2>Регистрация</h2>
    <form autocomplete="on" method="post" asp-controller="Account" asp-action="Register">
        <div class="user-box">
            <input asp-for="Name" type="text" name="Name" required autocomplete="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
            <label asp-for="Name">Имя</label>
        </div>
        <div class="user-box">
            <input asp-for="Email" type="email" name="Email" required autocomplete="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
            <label asp-for="Email">Email</label>
        </div>
        <div class="user-box">
            <input asp-for="Password" type="password" name="Password" required>
            <span asp-validation-for="Password" class="text-danger"></span>
            <label asp-for="Password">Пароль</label>
        </div>
        <div class="user-box">
            <input asp-for="PasswordConfirm" type="password" name="PasswordConfirm" required>
            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            <label asp-for="PasswordConfirm">Пароль</label>
        </div>
        @if (ViewBag.Error != null)
        {
            <div class="w-100 d-flex justify-content-center mb-3">
                <span class="text-danger">@ViewBag.Error</span>
            </div>
        }
        <div class="w-100 d-flex justify-content-center">
            <button type="submit">Зарегистрироваться</button>
        </div>
    </form>
</div>



@section Scripts {
    <script src="~/js/Account/register.js"></script>
}