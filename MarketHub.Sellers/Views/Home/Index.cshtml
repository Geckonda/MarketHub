@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}
@section Styles{

    <link rel="stylesheet" href="~/css/Home/home.css" asp-append-version="true" />
}
<div class="container">
    <div class="admin-panel home__admin-panel">
        <h1 class="admin-panel__title">Панель продавца</h1>
        <div class="admin-panel__grid">
            <button type="button" class="admin-panel__button" data-bs-toggle="modal" data-bs-target="#categories-modal">
                Добавить товар
            </button>
            <button class="admin-panel__button">Новости</button>
            <button class="admin-panel__button">Посмотреть свои товары</button>
            <button class="admin-panel__button">Заказы</button>
            <button class="admin-panel__button">Техническая поддержка</button>
            <button class="admin-panel__button">Посмотреть</button>
            <button class="admin-panel__button">Посмотреть</button>
            <button class="admin-panel__button">Посмотреть</button>
        </div>
    </div>
    

    <div class="modal fade" id="categories-modal" tabindex="-1" aria-labelledby="categories-modalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <ul>
                    @foreach (var category in Model.Categories!)
                    {
                        <li>
                            <a asp-controller="Product" asp-action="CreateProduct" asp-route-category="@category.Id">@category.Name</a>
                        </li>
                    }
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>